<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6">
      <h1>Create a New Post</h1>
      <%= simple_form_for @post do |f|%>
        <%= f.input :post_type, input_html: { value: 'Request'}, placeholder: "Request" %>
        <%= f.input :title %>
        <%= f.association :category %>
        <%= f.input :description, as: :text %>
        <%= f.input :location, input_html: { value: current_user.address }, placeholder: current_user.address %>
        <%= f.input :priority, as: :radio_buttons, collection: ["High", "Medium", "Low"] %>
        <%= f.button :submit, "Add", class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>





